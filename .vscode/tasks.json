{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install package",
			"type": "shell",
			"command": "R.exe",
			"args": [
				"--no-echo",
				"--no-restore",
				"-e",
				"'devtools::install()'"
			],
			"group": "build"
		},
		{
			"label": "Check package",
			"type": "shell",
			"command": "R.exe",
			"args": [
				"--no-echo",
				"--no-restore",
				"-e",
				"'devtools::check()'"
			],
			"group": "build"
		},
		{
			"label": "Test package",
			"type": "shell",
			"command": "R.exe",
			"args": [
				"--no-echo",
				"--no-restore",
				"-e",
				"'devtools::test()'"
			],
			"group": "test"
		}
	]
}